<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.AnswersScreen"
    android:orientation="vertical"
    >

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="back"
        android:layout_marginLeft="10dp"
        ></Button>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00/00/0000"
            android:layout_margin="5dp"
            ></TextView>

        <TextView
            android:id="@+id/tvRequester"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            ></TextView>
    </LinearLayout>

    <TextView
        android:id="@+id/tvRequestTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:background="@drawable/border"
        android:textSize="20sp"
        ></TextView>

    <TextView
        android:id="@+id/tvRequestContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        ></TextView>

    <ListView
        android:id="@+id/lvAnswers"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:divider="@color/design_default_color_secondary"
        android:dividerHeight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/border"
        ></ListView>

    <Button
        android:id="@+id/btnTextAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="add text answer"
        ></Button>

    <Button
        android:id="@+id/btnActivityAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="add activity answer"
        ></Button>

    <Button
        android:id="@+id/btnMeetAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="add meet answer"
        ></Button>
</LinearLayout>