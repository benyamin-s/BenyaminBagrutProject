<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.USE_EXACT_ALARM" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BenyaminBagrutProject"
        tools:targetApi="31">
        <activity
            android:name=".screens.AnswersScreen"
            android:exported="false" />
        <activity
            android:name=".screens.ViewMeetScreen"
            android:exported="false" />
        <activity
            android:name=".screens.EditMeetScreen"
            android:exported="false" />
        <activity
            android:name=".screens.MyMeetsScreen"
            android:exported="false" />
        <activity
            android:name=".screens.SearchActivitiesScreen"
            android:exported="false" />
        <activity
            android:name=".screens.RequestsScreen"
            android:exported="false" />
        <activity
            android:name=".screens.SettingsScreen"
            android:exported="false" />
        <activity
            android:name=".screens.LoginScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".screens.RegisterScreen"
            android:exported="false" />
        <activity
            android:name=".screens.MenuScreen"
            android:exported="false" />

        <receiver
            android:name=".AlarmReciever"
            android:enabled="true"
            android:exported="true"
            />
    </application>



</manifest>